	<queryString>
		<![CDATA[SELECT  CASE WHEN (ROUND(sum(calificacion),1) > 5 ) THEN 5 ELSE ROUND(sum(calificacion),1) END as calificacion from (SELECT @prTotalPreguntas := $P{total_preguntas} totPreguntas) totPreguntas,
              (SELECT @prId_Alumno := $P{idAlumno} alumno) alumno,
              (SELECT @prId_Cuestionario := $P{idCuestionario} cuestionario) cuestionario,
              nota_alumno]]>
	</queryString>
